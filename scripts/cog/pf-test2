FILE=fullpath -t $0
OS=qnx
PROCDIR=$YARP_ROOT/bin/$OS

echo "'oly cow..."
echo "be sure you're root..."

echo "Starting grabber2 on node 24"
on -n24 slay -Q grabber2 disparity
on -d -n24 $PROCDIR/grabber2 -height 128 -width 128 -format bgr -tagged \
  -top 0.05 -bottom 0.95 -dtop 0.03 \
  -output /yarp/stereo1/bgr &
sleep 2

on -n24 disparity &

#cogcam +/whatever &

sleep 2

porter /yarp/stereo1/bgr.1 /yarp/disparity/in/right
porter /yarp/stereo1/bgr.2 /yarp/disparity/in/left

porter /yarp/disparity/out/img /whatever

