DDNODE=9

if $USE_COLORSEGM
then
  echo '$$$$$ STARTING COLORSEGM'
  
  if [ -w //$DDNODE/dev/photon ]; then
    echo "Photon detected on node $DDNODE, using it"
  else
    echo "Using photon on node $NODE"
    DDNODE=$NODE
  fi
		    
  cogcam="on -n$DDNODE -d cogcam -s //$DDNODE/dev/photon"
		      
  let x=10
  let y=300
  let xstep=150
  let ystep=300

  sin gna | grep -q "/viewer/segm2" || (
  $cogcam -x $x -y $y +/yarp/viewer/segm2 &
  let x=x+xstep
  $cogcam -x $x -y $y +/yarp/viewer/segm2_wide &
  )			    
  let x=x+xstep
  let y=y+ystep

  on -n14 slay -Q color_segm2 
  on -n14 -d color_segm2 &
fi
			      
